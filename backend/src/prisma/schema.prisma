generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          String         @default("user")
  location      String?
  phoneNumber   String?
  createdAt     DateTime       @default(now())

  farms         Farm[]
  notifications Notification[]
}

// Farm model
model Farm {
  id          String       @id @default(uuid())
  name        String
  size        Float?
  unit        String?
  type        String?
  location    String
  latitude    Float?
  longitude   Float?
  ownerId     String
  owner       User         @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  cropCycles  CropCycle[]  @relation("FarmCrops")
  weatherLogs WeatherLog[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([ownerId])
}

// CropCycle model
model CropCycle {
  id           String    @id @default(uuid())
  farmId       String
  farm         Farm      @relation("FarmCrops", fields: [farmId], references: [id])

  cropId       Int
  crop         Crops     @relation(fields: [cropId], references: [id])

  plantingDate DateTime
  harvestDate  DateTime?
  status       String    @default("planted")

  tasks        Task[]
  expenses     Expense[]
  revenues     Revenue[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Task Model (Updated to fit Controller)
model Task {
  id          String     @id @default(uuid())
  cropCycleId String
  cropCycle   CropCycle  @relation(fields: [cropCycleId], references: [id], onDelete: Cascade)

  title       String     // e.g., "Fertilize Field"
  type        String     // e.g., "Field Work", "Purchase", "Harvest"
  description String?
  date        DateTime   // Due date or Completion date
  status      String     @default("pending") // pending | completed | missed
  photoUrl    String?    // Optional photo proof

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([cropCycleId])
  @@index([date])
}

// Static crop database
model Crops {
  id         Int      @id @default(autoincrement())
  cropName   String   @unique
  cropType   String
  region     String
  growthData Json
  createdAt  DateTime  @default(now())

  cropCycles CropCycle[]
}

// Expenses
model Expense {
  id          String    @id @default(uuid())
  cropCycleId String
  cropCycle   CropCycle @relation(fields: [cropCycleId], references: [id], onDelete: Cascade)

  type        String
  amount      Float
  description String?
  date        DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([cropCycleId])
  @@index([date])
}

// Revenue
model Revenue {
  id          String    @id @default(uuid())
  cropCycleId String
  cropCycle   CropCycle @relation(fields: [cropCycleId], references: [id], onDelete: Cascade)

  amount      Float
  quantity    Float?
  buyerName   String
  date        DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([cropCycleId])
  @@index([date])
}

// Notifications
model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  message   String
  type      String   @default("info")
  read      Boolean  @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([read])
}

// Weather logs
model WeatherLog {
  id          String   @id @default(uuid())
  farmId      String
  farm        Farm     @relation(fields: [farmId], references: [id], onDelete: Cascade)

  temperature Float
  humidity    Float
  rainfall    Float
  windSpeed   Float
  description String?
  date        DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([farmId])
  @@index([date])
}